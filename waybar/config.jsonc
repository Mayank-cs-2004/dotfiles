{
    // -------------------------------------------------------------------------
    // WAYBAR CONFIGURATION
    // -------------------------------------------------------------------------

    "layer": "top",
    "position": "top",

    // --- MODULE LAYOUT ---
    "modules-left": [
        "clock",
        "memory",
        "cpu",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "mpris",
        "pulseaudio#microphone",
        "pulseaudio",
        "battery",
        "backlight",
        "bluetooth",
        "network",
        "custom/notification",
        "idle_inhibitor"
    ],

    // -------------------------------------------------------------------------
    // HYPRLAND MODULES
    // -------------------------------------------------------------------------

    "hyprland/window": {
        "format": " Û∞£á {} ",  // Shows the active window title with an icon
        "max-length": 50,    // <--- THIS IS THE FIX. Try 30 or 40.
        "separate-outputs": true,
        "rewrite": {
        // If the title contains "GitHub", replace it all with this:
        "(.*)GitHub(.*)": "GitHub - Zen Browser",

        // If the title contains "YouTube", make it cleaner:
        "(.*)YouTube(.*)": "YouTube - Zen Browser",

        // Optional: Shorten "Zen Browser" to just "Zen" everywhere else
        "(.*) - Zen Browser": "$1 - Zen"
        }
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{}"
    },

    // -------------------------------------------------------------------------
    // SYSTEM STATUS & CLOCK
    // -------------------------------------------------------------------------

    "tray": {
        "icon-size": 13,
        "spacing": 10
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ", 
            "deactivated": "ÔÅ∞" 
        }
    },

    "clock": {
        "format": " Ôâ≤ {0:%d %b %a}  Ôê∫  {0:%H:%M}",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#dadada'><b>{}</b></span>",
                "weekdays": "<span color='#dadada'><b>{}</b></span>",
                "today": "<span color='#dadada'><b>{}</b></span>",
                "days": "<span color='#dadada'><b>{}</b></span>"
            }
        }
    },
    // -------------------------------------------------------------------------
    // HARDWARE CONTROLS (Audio, Brightness, Battery)
    // -------------------------------------------------------------------------

    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}", // Click to see time remaining
        "format-icons": ["Û∞ÇÉ", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "Óª® Muted",
        "on-click": "pamixer -t",      // Toggle Mute
        "on-scroll-up": "pamixer -i 1", // Volume Up
        "on-scroll-down": "pamixer -d 1", // Volume Down
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶","ÔÄß", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±  Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    // -------------------------------------------------------------------------
    // SYSTEM RESOURCES (CPU, RAM, Network)
    // -------------------------------------------------------------------------

    "memory": {
        "states": {
            "c": 90,
            "h": 60,
            "m": 30
        },
        "interval": 10,
        "format": "Û∞æÜ {used}GB",
        "format-m": "Û∞æÖ {used}GB",
        "format-h": "Û∞ìÖ {used}GB",
        "format-c": "Ôê° {used}GB",
        "format-alt": "Û∞æÜ {percentage}%", // Click to toggle between GB and %
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Û∞æÜ {percentage}%\nÓâ¶ {used:0.1f}GB/{total:0.1f}GB"
    },

    "cpu": {
        "interval": 10,
        "format": "Û∞çõ {usage}%",
        "format-alt": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },

    "bluetooth": {
        "format": "Û∞Ç∞ {status}",
        "format-on": "Û∞Ç∞ On",           // Icon + Capitalized Text
        "format-off": "Û∞Ç∞ Off",         // Crossed out icon + Text
        "format-disabled": "Û∞Ç∞ Off", // Crossed out icon + Text
        "format-connected": "Û∞Ç∞ {device_alias}", // Shows device name when connected
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "rfkill toggle bluetooth",   // Left click = Toggle On/Off
        "on-click-right": "blueman-manager"      // Right click = Open Menu
    },
    "network": {
        "tooltip": true,
        "format-wifi": "Û∞§® {essid:.6}",
        "format-ethernet": "Û∞§® ",
        "format-linked": "Û∞§® {ifname} (No IP)",
        "format-disconnected": "Û∞§® ",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
        "tooltip-format-disconnected": "Disconnected",
        "format-alt": "<span foreground='#99ffdd'>Û∞§® {bandwidthDownBytes}</span> <span foreground='#ffcc66'>Û∞§® {bandwidthUpBytes}</span>",
        "interval": 2,
        
        // --- THIS IS THE CHANGE ---
        // automatically opens a terminal scanning for wifi
        "on-click-right": "foot -e nmtui" 
    },
    "mpris": {
    // 1. Just the Player Icon and the Status Icon (Play/Pause)
    "format": "{player_icon} {status_icon}",
    "format-paused": "{player_icon} {status_icon}",
    
    // 2. This handles the click action
    "on-click": "playerctl play-pause",
    
    // 3. Define the icons you want to see
    "player-icons": {
        "default": "<span size='15000'>ÔÄÅ</span>",
        "mpv": "<span size='15000'>üéµ</span>",
        "spotify": "<span size='15000'>Û∞ñü</span>",
        "firefox": "<span size='15000'>Ôâ©</span>"
    },
    "status-icons": {
        "playing": "<span size='15000'>‚è∏</span>", 
        "paused": "<span size='15000'>‚ñ∂</span>",
        "stopped": "<span size='15000'>ÔÅç</span>"
    },
    // 4. Ensure it doesn't get cut off
    "max-length": 30
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon} {text}",
        "format-icons": {
            "notification": "ÔÉ≥<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÉ≥",
            "dnd-notification": "Ôá∂<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∂",
            "inhibited-notification": "ÔÉ≥<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÉ≥",
            "dnd-inhibited-notification": "Ôá∂<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∂"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}